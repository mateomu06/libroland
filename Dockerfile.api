RUN pip install -r requirements.txt

# Copiar el resto de los archivos de la aplicaci칩n
COPY apilibros.py .
# Exponer el puerto en el que se ejecutar치 la aplicaci칩n
EXPOSE 5000

# Comando para ejecutar la aplicaci칩n
CMD ["python", "apilibros.py"]
